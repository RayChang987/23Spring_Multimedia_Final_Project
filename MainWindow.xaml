<Window x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="quack!" 
        Height="720" Width="1080" 
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WebBrowser x:Name="car1view" Grid.Column="0" Grid.Row="0" />
        <WebBrowser x:Name="car2view" Grid.Column="1" Grid.Row="0" />
        <TextBlock x:Name="car1message" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" Foreground="#FFFF3434" TextAlignment="Center" Grid.Column="0" Grid.Row="1">
            <Run Text="CAR1"/><Run Text=":"/><Run Text="停止中"/>
        </TextBlock>
        <TextBlock x:Name="car2message" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" Foreground="#FFFF3434" TextAlignment="Center" Grid.Column="1" Grid.Row="1">
            <Run Text="CAR"/><Run Text="2"/><Run Language="zh-tw" Text=":停"/><Run Text="止中"/>
        </TextBlock>
        
        <Viewbox HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" >
            <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
        </Viewbox>

        <Viewbox HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" >
            <Image Source="{Binding ImageSource1}" Stretch="UniformToFill" />
        </Viewbox>

        <Label Content="aaa" Name="label_info" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2" />

        <Label Content="aaa" Name="action_info" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" />

        <Label Content="aaa" Name="signal_info" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="3" Grid.Row="0" Grid.RowSpan="4" />

